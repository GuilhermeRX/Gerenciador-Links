{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "LinkManager API RESTfull",
    "description": "Documentação da API LinkManager\n    Fornece dados para a aplicação: https://linkmanagerdev.netlify.app/\n    Desenvolvido por: Luiz Guilherme Avelino."
  },
  "host": "gerenciador-dev.herokuapp.com",
  "basePath": "/",
  "tags": [
    {
      "name": "Login",
      "description": "Endpoints"
    },
    {
      "name": "User",
      "description": "Endpoints"
    },
    {
      "name": "Link",
      "description": "Endpoints"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/login": {
      "post": {
        "tags": [
          "Login"
        ],
        "description": "Endpoint para se autenticar na plataforma.",
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/Login"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Login efetuado com sucesso.",
            "schema": {
              "$ref": "#/definitions/LoginResponse"
            }
          }
        }
      }
    },
    "/user": {
      "post": {
        "tags": [
          "User"
        ],
        "description": "Endpoint para cadastrar um novo usuário.",
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/CreateUser"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "User criado com sucesso.",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      },
      "get": {
        "tags": [
          "User"
        ],
        "description": "Endpoint para obter todos os usuários.",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Listagem de usuários obtida com sucesso.",
            "schema": {
              "$ref": "#/definitions/UserArray"
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/user/info": {
      "get": {
        "tags": [
          "User"
        ],
        "description": "Endpoint para obter um usuário especifico através de dados obtidos via token jwt.",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário obtido com sucesso.",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/user/{id}": {
      "put": {
        "tags": [
          "User"
        ],
        "description": "Endpoint para atualizar os dados de um usuário.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "ID do usuário."
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "authorization",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/CreateUser"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário editado com sucesso.",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "delete": {
        "tags": [
          "User"
        ],
        "description": "Endpoint para deletar um usuário.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "ID do usuário."
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "Usuário deletado com sucesso."
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/link": {
      "post": {
        "tags": [
          "Link"
        ],
        "description": "Endpoint para cadastrar um novo link.",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "authorization",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/CreateLink"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Link criado com sucesso.",
            "schema": {
              "$ref": "#/definitions/Link"
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "get": {
        "tags": [
          "Link"
        ],
        "description": "Endpoint para obter todos os links.",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Listagem de links obtida com sucesso.",
            "schema": {
              "$ref": "#/definitions/LinkArray"
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/link/{id}": {
      "get": {
        "tags": [
          "Link"
        ],
        "description": "Endpoint para obter um link específico através do ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "ID do link."
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Link obtido com sucesso.",
            "schema": {
              "$ref": "#/definitions/Link"
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "put": {
        "tags": [
          "Link"
        ],
        "description": "Endpoint para atualizar os dados de um link.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "ID do link."
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "authorization",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/CreateLink"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Link editado com sucesso.",
            "schema": {
              "$ref": "#/definitions/Link"
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "delete": {
        "tags": [
          "Link"
        ],
        "description": "Endpoint para deletar um link.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "ID do link."
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "Link deletado com sucesso."
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    }
  },
  "definitions": {
    "Login": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "example": "luiz@test.com"
        },
        "password": {
          "type": "string",
          "example": "123456"
        }
      }
    },
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "example": 2
        },
        "name": {
          "type": "string",
          "example": "Luiz guilherme"
        },
        "email": {
          "type": "string",
          "example": "test@test.com"
        },
        "password": {
          "type": "string",
          "example": "123456"
        }
      }
    },
    "Link": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "example": 1
        },
        "url": {
          "type": "string",
          "example": "www.flamengo.com"
        },
        "label": {
          "type": "string",
          "example": "Site Oficial do Flamengo"
        },
        "userId": {
          "type": "number",
          "example": 2
        }
      }
    },
    "CreateUser": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "Bill"
        },
        "password": {
          "type": "string",
          "example": "bill123456"
        },
        "email": {
          "type": "string",
          "example": "bill@linkmanager.com"
        }
      }
    },
    "CreateLink": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "example": "www.betrybe.com"
        },
        "label": {
          "type": "string",
          "example": "Site da Trybe"
        },
        "userId": {
          "type": "number",
          "example": 2
        }
      }
    },
    "UserArray": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/User"
      }
    },
    "LinkArray": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Link"
      }
    },
    "LoginResponse": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string",
          "example": "syJhbGciOiJIUzI1NiIsInR5cCI6IkfXVCJ8.eyJlbWFpbCI6InZpdmlAdGVzdC5jb20iLCJpZCI6MiwiaWF0IjoxNjYzNjI5ODgzfQ.e355HIy1JctDtpAaNi8pgQSEELmVH4o_nujUL2qBz6s"
        }
      }
    }
  }
}